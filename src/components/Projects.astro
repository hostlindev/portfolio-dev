---
import Html from "./icons/Html.astro";
import Css from "./icons/Css.astro";

const tags = {
  html: {
    name: "HTML",
    class: "bg-black text-white",
    icon: Html,
  },
  css: {
    name: "CSS",
    class: "bg-black text-white",
    icon: Css,
  },
};

const projects = [
  {
    title: "Landing Page - Servicios de Turismo",
    description:
      "Proyecto desarrollado como pr치ctica de herramientas como HTML, CSS sobre una landing page con tem치tica de turismo. Ideal para mostrar contenido sobre tus servicios.",
    link: "https://turismo-hstdev.netlify.app/",
    github: "https://github.com/hostlindev/ladingpage-turismo",
    image: "/turismo.png",
    tags: [tags.html, tags.css],
  },
  {
    title: "Componente - Card",
    description:
      "Proyecto desarrollado como pr치ctica de herramientas como HTML, CSS sobre un componente card para la muestra de informaci칩n.",
    link: "https://card-effect-hstdev.netlify.app/",
    github: "https://github.com/hostlindev/card-effect",
    image: "/componente-card.png",
    tags: [tags.html, tags.css],
  },
];
---

{
  projects.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((element) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${element.class}`}>
              <element.icon class="size-4" />
              {element.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10 mt-4"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
